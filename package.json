{
  "name": "my-fullstack-app",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run db:push && npm run dev",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && npx prisma generate",
    "db:studio": "cd server && npm run db:studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}