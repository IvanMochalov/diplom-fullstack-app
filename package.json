{
  "name": "my-fullstack-app",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run db:push && npm run dev",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "install-all": "npm run install-root && npm run install-server && npm run install-client && npm run generate-prisma",
    "install-root": "npm install",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "generate-prisma": "cd server && npx prisma generate",
    "db:studio": "cd server && npm run db:studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}